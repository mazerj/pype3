#!/bin/bash
#
# Install for mazer lab
#

DEST=/auto/share/pype3/`uname -m`

if [ "$*" = "" ]; then
    # default: no args
    sudo -p"sudo [mlab install]: " \
	 env "PATH=$PATH" \
	 ./install-to $DEST clobber install
elif [[ "$1" =~ -do.* ]]; then
    #anything like -docs, -dox etc will install with doc update
    sudo -p"sudo [mlab install]: " \
	 env "PATH=$PATH" \
	 ./install-to $DEST clobber install docs
else
    sudo -p"mlab [mlab install]: " \
	 env "PATH=$PATH" \
	 ./install-to $DEST $*
fi


